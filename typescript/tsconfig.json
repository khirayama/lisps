{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./src",
    "allowJs": false,
    "jsx": "react",
    "sourceMap": false,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "noImplicitThis": false,
    "allowSyntheticDefaultImports": false,
    "esModuleInterop": false,
    "alwaysStrict": true,
    "module": "commonjs",
    "target": "es2015"
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "./node_modules/@types/**/*.d.ts"
  ],
  "exclude": [
    "src/index.web.tsx"
  ]
}
